.row
  .col-md-6.col-md-offset-3
    %h1 Forgot Your Password?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form|
      = form_errors_for(resource)
      .form-group
        = form.label :email
        = form.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
      .form-group
        = form.submit "Send Me Reset Password Instructions", class: 'btn btn-primary'
    = render "devise/shared/links"
