- provide(:title, 'Contact Us')

%h1.display-4 Contact Us
= form_for @contact do |f|
  = form_errors_for(@contact)
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :phone_number
    = f.telephone_field :phone_number, class: 'form-control'
  .form-group
    = f.label :message
    = f.text_area :message, rows: '10', class: 'form-control'
  .form-group
    = recaptcha_tags
  .form-group
    = f.submit 'Submit', class: 'btn btn-primary form-control'
