- content_for_title("Activity #{@activity.title}")
- content_for(:subnav) do
  = link_to 'Â« Back to activities', activities_path, class: 'btn btn-primary', title: 'List of all activities'
  .btn-group
    = link_to 'Edit', edit_activity_path(@activity), class: 'btn', title: "Edit #{@activity}" if current_user&.admin?
    = link_to 'Delete', @activity, method: :delete, data: { confirm: "Delete Activity #{@activity.title}?" }, class: 'btn btn-danger', title: "Delete #{@activity}" if current_user&.admin?
%section
  %table.table-striped
    %tr
      %th Title
      %td= @activity.title
    %tr
      %th Who
      %td= @activity.who
    %tr
      %th What
      %td= @activity.what
    %tr
      %th Where
      %td= @activity.where
    %tr
      %th Start Date
      %td= I18n.l @activity.when_start, format: :standard
    %tr
      %th End Date
      %td= I18n.l @activity.when_end, format: :standard
    %tr
      %th How
      %td= @activity.how
    %tr
      %th Details
      %td= @activity.details
    %tr
      %th Tags
      %td
        - @activity.tag_list.each do |tag|
          .btn.btn-secondary.btn-sm.btn-static #{tag}
